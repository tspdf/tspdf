{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2024", "DOM"],
    "module": "ESNext",
    "target": "ES2024",
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "types": ["react", "react-dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
