{
  "name": "easy-pdf",
  "version": "0.1.0",
  "description": "A reusable React component library for generating PDFs easily.",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/easy-pdf.cjs.js",
  "module": "dist/easy-pdf.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/easy-pdf.es.js",
      "require": "./dist/easy-pdf.cjs.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "lint": "eslint . --ext .ts,.tsx",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.6",
    "tailwindcss": "^4.1.6"
  },
  "devDependencies": {
    "@storybook/react-vite": "^8.6.12",
    "@types/node": "^22.15.17",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.12.0",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "storybook": "^8.6.12",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}