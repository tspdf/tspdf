{
  "name": "tspdf",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "build:react-pdf": "cd packages/pdf-core && yarn build && cd ../react-pdf && yarn build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "lint:strict": "turbo run lint -- --max-warnings 0",
    "lint:config": "npx eslint \"packages/**/*.{js,mjs,ts}\" --fix",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,mjs,json}\"",
    "format:config": "prettier --write \"packages/**/*.{js,mjs,ts,json}\"",
    "postinstall": "husky && patch-package",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs}": [
      "eslint --fix",
      "eslint --max-warnings 0"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "patch-package": "^6.5.0",
    "pinst": "^3.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.9.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "postcss": "^8.5.3"
  },
  "resolutions": {
    "globals": "16.1.0",
    "webpack-dev-server": "^5.2.1",
    "esbuild": "^0.25.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
